        "type": "com.wearemobilefirst.MultiChoice",
        "inline": true,
        "uri": "%AgroEcoZone",
        "localStore": true,
        "responseText": "",
        "optional": false,
        "args": {
          "maxSelection": 1,
          "options": [
            {
              "id": "OptionKey1",
              "title": "Upper midlands"
            },
            {
              "id": "OptionKey2",
              "title": "Lowland midlands"
            },
            {
              "id": "OptionKey3",
              "title": "Upper highlands"
            },
            {
              "id": "OptionKey4",
              "title": "Lowland highlands"
            },
            {
              "id": "OptionKey5",
              "title": "Inland lowlands"
            },
            {
              "id": "OptionKey6",
              "title": "Coastal lowlands"
            },
            {
              "id": "OptionKey7",
              "title": "Don't know"
            }
          ]
